<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFF6FF"
    tools:context=".UbicacionEnvioActiviy"
    tools:ignore="LabelFor">


    <Button
        android:id="@+id/btnEnvDireccion"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="580dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:background="@color/colorAccent"
        android:fontFamily="@font/roboto_condensed_bold"
        android:text="Aceptar"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="24sp" />

  <ScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


      <TextView
          android:id="@+id/textView3"
          android:layout_width="0dp"
          android:layout_height="22dp"
          android:layout_marginStart="8dp"
          android:layout_marginTop="8dp"
          android:layout_marginEnd="8dp"
          android:fontFamily="@font/roboto_condensed_bold"
          android:text="Elija Ciudad"
          android:textAlignment="center"
          android:textAllCaps="false"
          android:textSize="14sp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="1.0"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/textView5" />

      <EditText

          android:id="@+id/NombreQRecibe"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:ems="10"
          android:hint="Escriba nombre de quien recibe aqui"
          android:importantForAutofill="no"
          android:inputType="textPersonName"
          android:maxLength="35"
          android:textAlignment="center"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.497"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/NombreQRecibeTxt"
          tools:targetApi="o" />

      <TextView
          android:id="@+id/NombreQRecibeTxt"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:fontFamily="@font/roboto_condensed_bold"
          android:text="@string/nombre_de_quien_recibe"
          android:textAlignment="center"
          android:textAllCaps="false"
          android:textSize="14sp"
          android:textStyle="normal"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

      <TextView
          android:id="@+id/textView7"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:fontFamily="@font/roboto_condensed_bold"
          android:maxLength="50"
          android:text="@string/tel_fono_de_quien_recibe"
          android:textAlignment="center"
          android:textAllCaps="false"
          android:textSize="14sp"
          android:textStyle="normal"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/NombreQRecibe" />

      <EditText
          android:id="@+id/EditTxtTelfRecib"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:ems="10"
          android:hint="Escriba telefono de quien recibe aqui"
          android:importantForAutofill="no"
          android:inputType="phone"
          android:maxLength="10"
          android:textAlignment="center"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/textView7"
          tools:targetApi="o" />

      <TextView
          android:id="@+id/textView11"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="8dp"
          android:layout_marginTop="8dp"
          android:layout_marginEnd="8dp"
          android:fontFamily="@font/roboto_condensed_bold"
          android:text="@string/d_a_de_entrega"
          android:textAlignment="center"
          android:textAllCaps="false"
          android:textSize="14sp"
          app:layout_constraintBottom_toTopOf="@+id/CalendarTxt"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/EditTxtTelfRecib" />

      <TextView
          android:id="@+id/textView12"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="8dp"
          android:fontFamily="@font/roboto_condensed_bold"
          android:text="@string/hora_de_entrega"
          android:textAlignment="center"
          android:textAllCaps="false"
          android:textSize="14sp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.0"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/spCiudad" />


      <CalendarView
          android:id="@+id/CalendarTxt"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="32dp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintHorizontal_bias="0.492"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/EditTxtTelfRecib" />

      <Spinner
          android:id="@+id/SpHorario"
          android:layout_width="0dp"
          android:layout_height="41dp"
          android:layout_marginTop="8dp"
          android:background="@drawable/fondospinner"
          android:textAlignment="center"
          android:textColor="#FF0000"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/textView12" />

      <Spinner
          android:id="@+id/spCiudad"
          android:layout_width="0dp"
          android:layout_height="41dp"
          android:layout_marginTop="8dp"
          android:background="@drawable/fondospinner"
          android:textAlignment="center"
          android:textColor="#FF0000"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/textView3" />

      <TextView
          android:id="@+id/textView2"
          android:layout_width="0dp"
          android:layout_height="250dp"
          android:layout_marginStart="8dp"
          android:layout_marginTop="8dp"
          android:layout_marginEnd="8dp"
          android:text="Si tiene problemas con la ubicacion comuniquese con nosotros. Trate de ingresar datos reales, si la ubicacion no concuerda estaremos en contacto con usted."
          android:textAlignment="center"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/SpHorario" />

      <TextView
          android:id="@+id/textView5"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginStart="8dp"
          android:layout_marginEnd="8dp"
          android:fontFamily="@font/roboto_condensed_bold"
          android:text="Los pedidos ingresados los dias domingos, o feriados, pasan al siguiente dia habil. Por favor realice sus pedidos un dia antes o con 5 horas de anticipiacion, por su tiempo de fabricacion."
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/CalendarTxt" />

      <ImageView
          android:id="@+id/imageView7"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginStart="8dp"
          android:layout_marginTop="8dp"
          android:layout_marginEnd="8dp"
          android:layout_marginBottom="40dp"
          android:visibility="gone"
          app:layout_constraintBottom_toBottomOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/textView2"
          app:srcCompat="@drawable/frutagolosa" />


    </android.support.constraint.ConstraintLayout>
  </ScrollView>
</RelativeLayout>